@page "/admin/role/updaterole/{handler?}/"
@model FA.JustBlog.UI.Areas.Identity.Pages.Roles.AddModel
@{
    var btnText = Model.IsUpdate ? "Update Role" : "Add new role";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="vh-100">
    <div class="container my-5">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">@btnText</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Input.Id" />
                            <input type="hidden" asp-for="IsUpdate" />

                            <div class="form-group">
                                <label asp-for="Input.Name"></label>
                                <input asp-for="Input.Name" class="form-control">
                                <span asp-validation-for="Input.Name" class="text-danger"></span>

                                <button id="add-or-edit-role" type="submit"
                                        asp-page-handler="AddOrUpdate" class="btn btn-outline-primary mt-3">
                                    @btnText
                                </button>
                                    <a class="text-dark btn btn-outline-light mt-3 ms-3" asp-page="./Index">Return List Roles</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

